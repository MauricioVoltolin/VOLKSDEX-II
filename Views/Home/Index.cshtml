@model IEnumerable<Volksdex_II.Models.Carro>
@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: linear-gradient(to bottom, #000000, #40E0D0);
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        color: white;
    }

    header {
        text-align: center;
        padding: 30px 0;
    }

    header h1 {
        font-size: 4rem;
        font-weight: bold;
        color: #fff;
        text-shadow: 2px 2px 5px purple;
        margin: 0;
    }

    .filters {
        text-align: center;
        margin-bottom: 20px;
    }

    .filters a {
        color: #40E0D0;
        margin: 0 10px;
        text-decoration: none;
        font-weight: bold;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 20px;
        gap: 20px;
    }

    .card {
        width: 250px;
        height: 350px;
        perspective: 1000px;
        border-radius: 10px;
        cursor: pointer;
    }

    .card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        transition: transform 0.8s;
        transform-style: preserve-3d;
        border-radius: 10px;
    }

    .card.flipped .card-inner {
        transform: rotateY(180deg);
    }

    .card-front, .card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 15px;
        box-sizing: border-box;
        transition: box-shadow 0.3s;
    }

    .card-front {
        background: #111;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    .card-front img {
        width: 80%;
        height: 150px;
        object-fit: cover;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .card-front h3 {
        font-weight: bold;
        margin: 5px 0;
    }

    .card-front p {
        font-style: italic;
        margin: 0;
    }

    .card:hover .card-front {
        box-shadow: 0 0 20px #40E0D0;
    }

    .card-back {
        background: #222;
        transform: rotateY(180deg);
        overflow-y: auto;
        font-size: 14px;
        text-align: left;
    }

    .card-back p {
        margin: 5px 0;
    }

    .card-back::-webkit-scrollbar {
        width: 6px;
    }

    .card-back::-webkit-scrollbar-thumb {
        background-color: #40E0D0;
        border-radius: 3px;
    }

    .card.flipped .card-front,
    .card.flipped .card-back {
        box-shadow: 0 0 20px purple;
    }

    footer {
        text-align: center;
        padding: 20px;
        font-size: 14px;
        color: #ccc;
        background: rgba(0,0,0,0.5);
    }
</style>

<header>
    <h1>VOLKSDEX</h1>
</header>

<div class="filters">
    <a href="?filtro=anoAsc">Ano Mais Antigo</a> |
    <a href="?filtro=anoDesc">Ano Mais Novo</a> |
    <a href="?filtro=potenciaAsc">Menos Potente</a> |
    <a href="?filtro=potenciaDesc">Mais Potente</a> |
    <a href="?filtro=nome">Nome</a>
</div>

<div class="cards-container">
    @foreach (var carro in Model)
    {
        <div class="card" onclick="flipCard(this)">
            <div class="card-inner">
                <div class="card-front">
                    <img src="~/images/@carro.ImagemUrl" alt="@carro.NomeModelo" />
                    <h3>@carro.NomeModelo</h3>
                    <p>@carro.AnoLancamento</p>
                </div>
                <div class="card-back">
                    <p><strong>Tipo:</strong> @carro.Tipo</p>
                    <p><strong>Motorização:</strong> @carro.Motorizacao</p>
                    <p><strong>Potência:</strong> @carro.Potencia</p>
                    <p><strong>Torque:</strong> @carro.Torque</p>
                    <p><strong>Câmbio:</strong> @carro.Cambio</p>
                    <p><strong>Popularidade:</strong> @carro.Popularidade</p>
                    <p><strong>Descrição:</strong> @carro.Descricao</p>
                </div>
            </div>
        </div>
    }
</div>

<footer>
    MAURICIO VOLTOLIN - ENGENHARIA DA COMPUTAÇÃO - BARRA BONITA/SP - 2025
</footer>

<script>
    function flipCard(card) {
        card.classList.toggle('flipped');
    }
</script>
